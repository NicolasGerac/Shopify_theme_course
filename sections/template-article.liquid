<h1>{{ article.title }}</h1>
<small>{{ article.author }}</small>
<time datetime="{{ article.published_at | date : "%Y-%m-%d" }}">{{ article.published_at | date : "%Y-%m-%d" }}  </time>
<img src="{{ article.image |  img_url: 'large' }}" loading="lazy" alt="">
<div>{{ article.content }}</div>

{% schema %}
{
  "name": "Template Article",
  "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      },
      {
        "type": "checkbox",
        "id": "enable_publised_date",
        "default": true,
        "label": "Display publised date"
      }
    ]
}
{% endschema %}